@using System.Web.UI.HtmlControls

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <title>EOnlineShop</title>

    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

    <!-- Bootstrap -->
    <link type="text/css" rel="stylesheet" href="Content/css/bootstrap.min.css" />

    <!-- Slick -->
    <link type="text/css" rel="stylesheet" href="Content/css/slick.css" />
    <link type="text/css" rel="stylesheet" href="Content/css/slick-theme.css" />

    <!-- nouislider -->
    <link type="text/css" rel="stylesheet" href="Content/css/nouislider.min.css" />

    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="Content/css/font-awesome.min.css">

    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="Content/css/style.css" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

    <!-- /HEADER -->
    <!-- NAVIGATION -->
    <nav id="navigation">
        <!-- container -->
        <div class="container">
            <!-- responsive-nav -->
            <div id="responsive-nav">
                <!-- NAV -->
                <ul class="main-nav nav navbar-nav">
                    <li class="active"><a href="#">Home</a></li>
                    <li>@Html.ActionLink("All Categories", "FindProductByCategory", new { Category = "" }, new { @class = Request["Category"] == "" ? "list-group-item active" : "list-group-item" })</li>
                    <li>@Html.ActionLink("Laptops", "FindProductByCategory", new { Category = "Laptops" }, new { @class = Request["Category"] == "Laptops" ? "list-group-item active" : "list-group-item" })</li>
                    <li>@Html.ActionLink("Toys", "FindProductByCategory", new { Category = "Toys" }, new { @class = Request["Category"] == "Toys" ? "list-group-item active" : "list-group-item" })</li>
                    <li>@Html.ActionLink("Smartphones", "FindProductByCategory", new { Category = "Smartphones" }, new { @class = Request["Category"] == "Smartphones" ? "list-group-item active" : "list-group-item" })</li>
                    <li>@Html.ActionLink("Cameras", "FindProductByCategory", new { Category = "Cameras" }, new { @class = Request["Category"] == "Cameras" ? "list-group-item active" : "list-group-item" })</li>
                    <li>@Html.ActionLink("Audio", "FindProductByCategory", new { Category = "Audio" }, new { @class = Request["Category"] == "Audio" ? "list-group-item active" : "list-group-item" })</li>
                    <li>@Html.ActionLink("Books", "FindProductByCategory", new { Category = "Books" }, new { @class = Request["Category"] == "Books" ? "list-group-item active" : "list-group-item" })</li>
                </ul>
                <!-- /NAV -->
            </div>
            <!-- /responsive-nav -->
        </div>
        <!-- /container -->
    </nav>

